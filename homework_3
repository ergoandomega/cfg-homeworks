import random
import string

def get_random_lower_string(length):
    # choose from all lowercase letter
    letters = string.ascii_lowercase
    random_str = ''.join(random.choice(letters) for i in range(length))
    print("Random string of length", length, "is:", random_str)

get_random_lower_string(8)
get_random_lower_string(6)
get_random_lower_string(4)


